<h2>Garden Events</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Starts at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.name %></td>
        <td><%= calendar.starts_at %></td>
        <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar events: @calendars do |date, meetings| %>
<%= date %>

<% @calendars.each do |calendar| %>
<div>
  <%= calendar.name %>
</div>
<% end %>
<% end %>


<%= link_to 'New Calendar', new_calendar_path %>
