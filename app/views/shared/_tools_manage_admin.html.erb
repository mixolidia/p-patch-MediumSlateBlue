<h1>Add Tool to Library</h1>

<div class="add-tools">
  <div id="add_field">Add another field</div>

  <div class="input_field">
    <%= form_for @tool, url: add_tool_path do |f| %>
  </div>
  <%=f.submit "Add to library", class: "submit" %>
</div>
  <% end %>

<hr>

<h1>Remove Tool from Library</h1>

<div class="table">
  <table class="table table-condensed">
    <% @tools.each do |tool| %>
    <tbody>
      <tr>
        <td class="col-lg-3 col-m-3 col-s-3 col-xs-3"><%= tool.name %></td>
        <td class="col-lg-3 col-m-3 col-s-3 col-xs-3"></td>
        <td class="col-lg-3 col-m-3 col-s-3 col-xs-3"><%= button_to "Remove", {:action => 'destroy',
          :id => tool.id, :available => tool.available }, :method => :delete,
          class: "btn btn-default round-button check-out" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
